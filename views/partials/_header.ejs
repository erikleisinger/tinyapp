<head>
  <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.1/css/all.css" integrity="sha384-50oBUHEmvpQ+1lW4y57PTFmhCaXp0ML5d60M1M7uH2+nqUivzIebhndOJK28anvf" crossorigin="anonymous">
</head>
<header>
  <nav class="navbar navbar-expand-lg navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <ul class="navbar-nav mr-auto">
        <li class="nav-item">
          <a class="nav-link" href="/urls">My URLs</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/urls/new">Create New URL</a>
        </li>
        
      </ul>
       
      <span class="navbar-text ml-1">
        <% if (!username) { %>
          <form class="form-check form-check-inline" action="/login" method="POST">
            <input class="form-control mr-2" type="text" name="username" placeholder="username">
            <button type="submit" class="btn btn-light">Login</button>
          </form> 
          <form class="form-check form-check-inline" action="/goRegister" method="GET">
            <input class="form-control mr-2" type="hidden" name="goRegister">
            <button type="submit" class="btn btn-secondary">Register</button>
          </form> 
       <% } else { %>
        <form class="form-check form-check-inline" action="/logout" method="POST">
          <span class="mr-3">Logged in as: <%= username %></span>
          <input type="hidden" name="logout">
          <button type="submit" class="btn btn-light">LOGOUT</button>
        </form>
      <% } %> 
       
        
      </span>
        
      </div>
      
     
    </div>
  </nav>
</header>